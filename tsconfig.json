{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "system",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": false,
    "importsNotUsedAsValues": "remove",
    "sourceMap": true,
    "outFile": "dist/undo-peasy.js"
  },
  "files": ["src/Api.ts"],
  "exclude": ["node_modules"]
}
